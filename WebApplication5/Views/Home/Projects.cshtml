@model IEnumerable<WebApplication5.Models.Project>
@{
    ViewBag.Title = "Projects";
}

<head>
    <style>
        body {
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #fff;
            font-family: 'Poppins', sans-serif;
        }

       

        @@keyframes shine {
            from { background-position: 0% }
            to { background-position: 200% }
        }
        .section-heading {
            font-size: 2.5rem; /* Thodi badi heading */
            font-weight: 700; /* Bold text */
            color: #00d4ff; /* Stylish blue */
            text-transform: uppercase; /* SAB CAPITAL mai (portfolio style) */
            letter-spacing: 2px; /* Har letter ke beech gap */
            position: relative;
            display: inline-block;
            padding-bottom: 8px;
        }

            /* Neeche underline effect */
            .section-heading::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: 0;
                height: 4px;
                width: 100%;
                background: linear-gradient(90deg, #00c6ff, #ffd700);
                border-radius: 2px;
            }

        .project-card {
            background: rgba(33, 37, 41, 0.6); /* glass effect */
            border-radius: 18px;
            box-shadow: 0px 8px 40px rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(10px);
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            margin-bottom: 35px;
            border: 1px solid rgba(255, 255, 255, 0.15);
        }

        .project-card:hover {
            transform: translateY(-12px) scale(1.03);
            box-shadow: 0px 15px 50px rgba(0, 0, 0, 0.9);
        }

        .project-card .card-title {
            color: #00d4ff;
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: 0.5px;
            margin-bottom: 18px;
        }

        .project-card h6 {
            color: #b0b7bd;
            font-weight: 500;
            margin-top: 10px;
        }

        .project-card p {
            color: #e9ecef;
            line-height: 1.6;
        }

        .project-card a {
            display: inline-block;
            margin-top: 5px;
            padding: 6px 14px;
            border-radius: 8px;
            background: linear-gradient(90deg, #0d6efd, #0dcaf0);
            color: white !important;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .project-card a:hover {
            background: linear-gradient(90deg, #ffc107, #ff6f00);
            transform: scale(1.05);
            text-decoration: none;
        }
    </style>
</head>

<div class="text-center mb-5">
    <h2 class="section-heading">🚀 My Projects</h2>
    <p class="text-muted" style="font-size:1.1rem;">Some of the exciting projects I’ve worked on 👇</p>
</div>

<div class="row">
    @foreach (var project in Model)
    {
        <div class="col-md-4">
            <div class="card project-card shadow-lg">
                <div class="card-body">
                    <h5 class="card-title">@project.Title</h5>

                    <h6 class="card-subtitle mb-2">📄 Description</h6>
                    <p class="card-text">@project.Description</p>

                    <h6 class="card-subtitle mb-2">⚙️ Tech Stack</h6>
                    <p class="card-text">@project.TechStack</p>

                    <h6 class="card-subtitle mb-2">🔗 Project Link</h6>
                    <p class="card-text">
                        @if (!string.IsNullOrEmpty(project.Link))
                        {
                            <a href="@project.Link" target="_blank" rel="noopener noreferrer">
                                View Project
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No Link</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    }
</div>
