<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    /* Hero Section */
    .hero-section {
        background: rgba(20, 22, 25, 0.85);
        backdrop-filter: blur(14px);
        border-radius: 25px;
        padding: 80px 20px;
        box-shadow: 0 8px 40px rgba(0, 0, 0, 0.75);
        position: relative;
        overflow: hidden;
    }

    .hero-section::before,
    .hero-section::after {
        content: "";
        position: absolute;
        border-radius: 50%;
        filter: blur(120px);
        opacity: 0.4;
        animation: float 10s infinite alternate ease-in-out;
    }

    .hero-section::before {
        width: 280px;
        height: 280px;
        background: #00c6ff;
        top: -60px;
        left: -100px;
    }

    .hero-section::after {
        width: 330px;
        height: 330px;
        background: #ffd700;
        bottom: -100px;
        right: -120px;
    }

    @@keyframes float {
        from { transform: translateY(0); }
        to { transform: translateY(-30px); }
    }

    /* Shared Image Style */
    .profile-pic {
        width: 220px;
        height: 220px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #f8f9fa;
        box-shadow: 0 0 25px rgba(0, 198, 255, 0.7);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .profile-pic:hover {
            transform: scale(1.07);
            box-shadow: 0 0 35px rgba(0, 198, 255, 0.9);
        }



    .hero-section h1 {
        font-size: 3rem;
        font-weight: 700;
        color: #fff;
        text-shadow: 0 0 12px rgba(0, 198, 255, 0.4);
    }

    .hero-section p.lead {
        font-size: 1.25rem;
        color: #adb5bd;
    }

    .hero-section hr {
        border: none;
        height: 3px;
        width: 80px;
        background: linear-gradient(90deg, #00c6ff, #ffd700);
        margin: 20px auto;
        border-radius: 3px;
    }

    .hero-section .btn {
        border-radius: 50px;
        padding: 14px 28px;
        font-weight: 500;
        font-size: 1.05rem;
        transition: all 0.3s ease-in-out;
    }

    .btn-light {
        background: #00c6ff;
        border: none;
        color: #212529;
        box-shadow: 0 4px 15px rgba(0, 198, 255, 0.5);
    }
    .btn-light:hover {
        background: #33d6ff;
        transform: translateY(-3px);
    }

    .btn-outline-light {
        border: 2px solid #adb5bd;
        color: #f8f9fa;
    }
    .btn-outline-light:hover {
        background: #ffd700;
        border-color: #ffd700;
        color: #212529;
        transform: translateY(-3px);
        box-shadow: 0 4px 15px rgba(255, 215, 0, 0.5);
    }

    /* Skill Card */
    .skill-card {
        background: rgba(33, 37, 41, 0.6);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        transition: all 0.35s ease-in-out;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    }
    .skill-card:hover {
        transform: translateY(-8px) scale(1.03);
        box-shadow: 0 0 30px rgba(0, 198, 255, 0.4), 0 0 25px rgba(255, 215, 0, 0.4);
    }

    /* Footer */
/*    .footer {
        font-size: 0.95rem;
        overflow: hidden;
        border-top: none;
        position: relative;
    }*/

    .footer::before,
    .footer::after {
        content: "";
        position: absolute;
        border-radius: 50%;
        filter: blur(120px);
        opacity: 0.25;
        z-index: 0;
    }

    .footer::before {
        width: 350px;
        height: 350px;
        background: #00c6ff;
        top: -80px;
        left: -120px;
    }

    .footer::after {
        width: 400px;
        height: 400px;
        background: #ffd700;
        bottom: -100px;
        right: -150px;
    }

    .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        margin-top: 30px;
        padding-top: 15px;
    }

    .footer-link {
        color: #adb5bd;
        text-decoration: none;
        transition: color 0.3s ease, text-shadow 0.3s ease;
        position: relative;
        z-index: 1;
    }
    .footer-link:hover {
        color: #00c6ff;
        text-shadow: 0 0 8px rgba(0,198,255,0.8);
    }

    .social-link {
        transition: transform 0.3s, color 0.3s, text-shadow 0.3s;
        position: relative;
        z-index: 1;
    }
    .social-link:hover {
        color: #ffd700;
        transform: scale(1.2);
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.7);
    }

    .footer h5 {
        letter-spacing: 1px;
        color: #fff;
        text-shadow: 0 0 10px rgba(0,198,255,0.6);
        position: relative;
        z-index: 1;
    }
</style>

